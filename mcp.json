{
  "name": "Busy Brief",
  "version": "1.0.0",
  "description": "Turn long work conversations into clear decisions, risks, and next steps â€” fast.",
  "author": "TL;DR Labs",
  "homepage": "https://github.com/iakogwu/tldr-busy-brief",
  "repository": {
    "type": "git",
    "url": "https://github.com/iakogwu/tldr-busy-brief.git"
  },
  "license": "MIT",
  "keywords": [
    "summarization",
    "brief",
    "productivity",
    "text analysis",
    "alignment"
  ],
  "permissions": {
    "data_access": [
      "user_text"
    ],
    "data_storage": "none",
    "external_requests": [
      "api.openai.com"
    ]
  },
  "scopes": [
    "summarize_text"
  ],
  "resources": [
    {
      "uri": "ui://widget/index.html",
      "name": "Busy Brief Widget",
      "mimeType": "text/html+skybridge",
      "description": "Displays the summary and action items in a structured card.",
      "_meta": {
        "openai/widgetPrefersBorder": true,
        "openai/widgetCSP": {
          "connect_domains": [
            "https://*"
          ],
          "resource_domains": [
            "https://fonts.googleapis.com",
            "https://fonts.gstatic.com"
          ],
          "frame_domains": []
        }
      }
    }
  ],
  "tools": [
    {
      "name": "busy_brief",
      "description": "Turn long workplace content into structured briefs with decisions, risks, and next alignment actions. The result MUST be displayed using the 'Busy Brief Widget' (ui://widget/index.html).",
      "input_schema": {
        "type": "object",
        "required": [
          "input"
        ],
        "properties": {
          "input": {
            "type": "string",
            "description": "The text content to analyze and summarize",
            "minLength": 20,
            "maxLength": 100000
          }
        },
        "additionalProperties": false
      },
      "output_schema": {
        "type": "object",
        "properties": {
          "summary": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Key points (Why this matters, Key Signals, Current Status)"
          },
          "decision_status": {
            "type": "string",
            "description": "Status of decisions (e.g. 'Proposed', 'Converted', 'None')"
          },
          "next_alignment_actions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Implied next steps for alignment"
          },
          "open_questions": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Risks and unresolved questions"
          },
          "bottom_line": {
            "type": "string",
            "description": "A single synthesis sentence"
          },
          "action_details": {
            "type": "array",
            "description": "Optional people/dates tied to specific actions",
            "items": {
              "type": "object",
              "properties": {
                "action": {
                  "type": "string"
                },
                "people": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "dates": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "required": [
                "action"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "summary",
          "decision_status",
          "next_alignment_actions",
          "open_questions",
          "bottom_line"
        ]
      },
      "annotations": {
        "readOnlyHint": true
      },
      "_meta": {
        "openai/outputTemplate": "ui://widget/index.html"
      }
    }
  ],
  "server": {
    "command": "node",
    "args": [
      "dist/server/index.js"
    ],
    "env": {
      "OPENAI_API_KEY": "${OPENAI_API_KEY}",
      "OPENAI_MODEL": "gpt-4o-mini",
      "PORT": "3333",
      "MAX_RETRIES": "3",
      "TIMEOUT_MS": "30000"
    }
  }
}